rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ─────────────────────────────────────────────────────────────
    // Helper functions
    // ─────────────────────────────────────────────────────────────

    // Superior admin / owner – full access
    function isOwner() {
      return request.auth != null
        && request.auth.uid == "JZgMG6xdwAYInXsdciaGj6qNAsG2";
    }

    // Any signed-in user
    function isAuthenticated() {
      return request.auth != null;
    }

    // Admin role (from users collection)
    function hasAdminRole() {
      return request.auth != null
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Owner or admin – for privileged operations
    function isOwnerOrAdmin() {
      return isOwner() || hasAdminRole();
    }

    // ─────────────────────────────────────────────────────────────
    // Participants – attendance & check-in
    // ─────────────────────────────────────────────────────────────
    match /participants/{participantId} {
      allow read: if true;
      allow create, update: if isAuthenticated();
      allow delete: if isOwnerOrAdmin();
    }

    // ─────────────────────────────────────────────────────────────
    // Staff members – attendance & check-in
    // ─────────────────────────────────────────────────────────────
    match /staff_members/{staffMemberId} {
      allow read: if true;
      allow create, update: if isAuthenticated();
      allow delete: if isOwnerOrAdmin();
    }

    // ─────────────────────────────────────────────────────────────
    // System reference data
    // ─────────────────────────────────────────────────────────────
    match /system_schools/{schoolId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }

    match /system_committees/{committeeId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }

    match /system_staff_teams/{teamId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }

    // ─────────────────────────────────────────────────────────────
    // System config – day switch, default statuses (owner/admin only)
    // ─────────────────────────────────────────────────────────────
    match /system_config/{settingId} {
      allow read: if true;
      allow create, update, delete: if isOwnerOrAdmin();
    }

    // ─────────────────────────────────────────────────────────────
    // Admin users – management (owner only for writes)
    // ─────────────────────────────────────────────────────────────
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow read, create, update, delete: if isOwner();
    }
  }
}
