
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isOwner() {
      return request.auth != null && request.auth.uid == "JZgMG6xdwAYInXsdciaGj6qNAsG2";
    }

    function isSuperiorAdmin() {
      return isOwner() || (request.auth != null && getUserData().canAccessSuperiorAdmin == true);
    }

    function isAdmin() {
      return request.auth != null && getUserData().role == "admin";
    }

    function canEditParticipants() {
      return isSuperiorAdmin() || (isAdmin() && getUserData().permissions.canEditParticipants == true);
    }

    function canDeleteParticipants() {
      return isSuperiorAdmin() || (isAdmin() && getUserData().permissions.canDeleteParticipants == true);
    }

    function canCreateStaff() {
      return isSuperiorAdmin() || (isAdmin() && getUserData().permissions.canCreateStaff == true);
    }

    function canEditStaff() {
      return isSuperiorAdmin() || (isAdmin() && getUserData().permissions.canEditStaff == true);
    }

    function canDeleteStaff() {
      return isSuperiorAdmin() || (isAdmin() && getUserData().permissions.canDeleteStaff == true);
    }

    function canAccessAnalytics() {
      return isSuperiorAdmin() || (isAdmin() && getUserData().permissions.canAccessAnalytics == true);
    }

    function canManageQRCodes() {
      return isSuperiorAdmin() || (isAdmin() && getUserData().permissions.canManageQRCodes == true);
    }

    match /participants/{participantId} {
      allow read, list: if true; // Public read access
      allow create: if canEditParticipants();
      allow update: if canEditParticipants();
      allow delete: if canDeleteParticipants();
    }

    match /staff_members/{staffMemberId} {
      allow read, list: if true; // Public read access
      allow create: if canCreateStaff();
      allow update: if canEditStaff();
      allow delete: if canDeleteStaff();
    }

    match /system_schools/{schoolId} {
      allow read: if true;
      allow write: if isSuperiorAdmin();
    }

    match /system_committees/{committeeId} {
      allow read: if true;
      allow write: if isSuperiorAdmin();
    }

    match /system_staff_teams/{teamId} {
      allow read: if true;
      allow write: if isSuperiorAdmin();
    }

    match /system_config/{settingId} {
      allow read: if true;
      allow write: if isSuperiorAdmin();
    }

    match /users/{userId} {
      allow read, write: if isSuperiorAdmin();
      allow get: if request.auth != null && request.auth.uid == userId;
    }

    match /users {
       allow list: if isSuperiorAdmin(); 
    }
  }
}
