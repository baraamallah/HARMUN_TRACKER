rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function getUserData() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data 
        : null;
    }

    function isOwner() {
      return request.auth != null && request.auth.uid == "JZgMG6xdwAYInXsdciaGj6qNAsG2";
    }

    function isSuperiorAdmin() {
      let userData = getUserData();
      return isOwner() || (request.auth != null && userData != null && userData.canAccessSuperiorAdmin == true);
    }

    function isAdmin() {
      let userData = getUserData();
      return request.auth != null && userData != null && userData.role == "admin";
    }

    function canEditParticipants() {
      let userData = getUserData();
      return isSuperiorAdmin() || (isAdmin() && userData.get('permissions', {}).get('canEditParticipants', false) == true);
    }

    function canDeleteParticipants() {
      let userData = getUserData();
      return isSuperiorAdmin() || (isAdmin() && userData.get('permissions', {}).get('canDeleteParticipants', false) == true);
    }

    function canCreateStaff() {
      let userData = getUserData();
      return isSuperiorAdmin() || (isAdmin() && userData.get('permissions', {}).get('canCreateStaff', false) == true);
    }

    function canEditStaff() {
      let userData = getUserData();
      return isSuperiorAdmin() || (isAdmin() && userData.get('permissions', {}).get('canEditStaff', false) == true);
    }

    function canDeleteStaff() {
      let userData = getUserData();
      return isSuperiorAdmin() || (isAdmin() && userData.get('permissions', {}).get('canDeleteStaff', false) == true);
    }

    function canAccessAnalytics() {
      let userData = getUserData();
      return isSuperiorAdmin() || (isAdmin() && userData.get('permissions', {}).get('canAccessAnalytics', false) == true);
    }

    function canManageQRCodes() {
      let userData = getUserData();
      return isSuperiorAdmin() || (isAdmin() && userData.get('permissions', {}).get('canManageQRCodes', false) == true);
    }

    match /participants/{participantId} {
      allow read, list: if true;
      
      allow update: if request.auth != null;
      
      allow create: if canEditParticipants();
      allow delete: if canDeleteParticipants();
    }

    match /staff_members/{staffMemberId} {
      allow read, list: if true;
      
      allow update: if request.auth != null;
      
      allow create: if canCreateStaff();
      allow delete: if canDeleteStaff();
    }

    match /system_schools/{schoolId} {
      allow read: if true;
      allow write: if isSuperiorAdmin();
    }

    match /system_committees/{committeeId} {
      allow read: if true;
      allow write: if isSuperiorAdmin();
    }

    match /system_staff_teams/{teamId} {
      allow read: if true;
      allow write: if isSuperiorAdmin();
    }

    match /system_config/{settingId} {
      allow read: if true;
      allow write: if isSuperiorAdmin();
    }

    match /users/{userId} {
      allow read, write: if isSuperiorAdmin();
      allow get: if request.auth != null && request.auth.uid == userId;
    }
  }
}
