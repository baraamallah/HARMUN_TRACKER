rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Owner UID - has full access
    function isOwner() {
      return request.auth != null && request.auth.uid == "JZgMG6xdwAYInXsdciaGj6qNAsG2";
    }

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user has admin role in users collection
    function hasAdminRole() {
      return request.auth != null 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Participants collection
    match /participants/{participantId} {
      allow read: if true;
      allow create, update: if isAuthenticated();
      allow delete: if isOwner() || hasAdminRole();
    }

    // Staff members collection
    match /staff_members/{staffMemberId} {
      allow read: if true;
      allow create, update: if isAuthenticated();
      allow delete: if isOwner() || hasAdminRole();
    }

    // System schools collection
    match /system_schools/{schoolId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // System committees collection
    match /system_committees/{committeeId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // System staff teams collection
    match /system_staff_teams/{teamId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // System config collection (day switching, default statuses, etc.)
    match /system_config/{settingId} {
      allow read: if true;
      allow write: if isOwner() || hasAdminRole();
    }

    // Users collection (for admin management)
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow read, write: if isOwner();
    }
  }
}
